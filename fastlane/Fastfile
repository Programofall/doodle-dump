default_platform(:ios)

platform :ios do
  desc "Build and export signed ipa for CI"
  lane :build do
    build_app(
      scheme: "App",
      workspace: "ios/App/App.xcworkspace",
      export_method: ENV['EXPORT_METHOD'] || "app-store",
      output_directory: "ios-output",
      clean: true
    )
  end

  desc "Use match to fetch provisioning and certs, then build"
  lane :match_and_build do
    match(type: ENV['MATCH_TYPE'] || 'appstore', readonly: true)
    build_app(
      scheme: "App",
      workspace: "ios/App/App.xcworkspace",
      export_method: ENV['EXPORT_METHOD'] || "app-store",
      output_directory: "ios-output",
      clean: true
    )
  end
end
